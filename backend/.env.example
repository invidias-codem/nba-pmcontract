# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Polymarket API Credentials
# Get these from: https://docs.polymarket.com/#authentication
POLY_API_KEY=your_polymarket_api_key_here
POLY_API_SECRET=your_polymarket_api_secret_here
POLY_PASSPHRASE=your_polymarket_passphrase_here

# Ethereum Signer Private Key
# This is used to sign blockchain transactions
# IMPORTANT: Never commit this to git! Keep it secret!
SIGNER_PRIVATE_KEY=your_ethereum_private_key_here

# Builder ID (Optional but recommended)
# Get this from Polymarket to enable order attribution and revenue sharing
# Format: Usually a UUID or identifier provided by Polymarket
BUILDER_ID=your_builder_id_here

# Smart Contract Addresses
NBACARD_ADDRESS=0x0000000000000000000000000000000000000000

# RPC URL for blockchain connection
RPC_URL=http://127.0.0.1:8545

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys for External Services
# ClearSports API (for player stats)
CLEARSPORTS_API_KEY=your_clearsports_api_key_here

# NBA API Sports (for game data)
NBA_API_KEY=your_nba_api_key_here
